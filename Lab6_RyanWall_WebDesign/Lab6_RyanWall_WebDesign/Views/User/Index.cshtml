@model IEnumerable<Lab6_RyanWall_WebDesign.Models.User>

@{
    ViewBag.Title = "Index";
}
<div class="well"><h2 class="text-center" id="tabletitle" style="padding: 40px; background-color: blueviolet; color: white;">Table of Users</h2></div>



<p>
    @Html.ActionLink("Create New User", "Create", null, htmlAttributes: new {@class="btn btn-default btn-lg"})
</p>

<table class="table  table-striped table-bordered table-hover" id="usertable">
    
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NickName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FavoriteNBATeam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DoYouPlayVG)
        </th>
  <th></th>
    </tr>



@foreach (var item in Model)
{ 
    <tr class="rows" style="background-color: @(@item.Cool ? "red" : "yellow")">
        <td class='@(@item.FirstName.StartsWith("ryan") ? "success" : "")'>
            @Html.DisplayFor(modelItem => item.FirstName )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td class="tdNickName">
            @Html.DisplayFor(modelItem => item.NickName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FavoriteNBATeam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DoYouPlayVG)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserId }, htmlAttributes: new { @class = "btn btn-default btn-small" }) 
            @Html.ActionLink("Details", "Details", new { id=item.UserId }, htmlAttributes: new { @class = "btn btn-default btn-small" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.UserId }, htmlAttributes: new {@class="btn btn-default btn-small" })
        </td>
        
    </tr>
   
}

</table>

@if (Model.Count() > 2)
{
    <div class="alert alert-warning" >
        <a href="#" class="close" data-dismiss="alert" aria-label="close" >&times;</a>
        <strong>Warning!</strong> This alert box indicates there are more than 3 entities
    </div>
}
<button class="btn btn-info" id="show">Show Table</button>
<button class="btn btn-info" id="hide">Hide Table</button>
<p>

</p>
<div style="position:center; text-align:center; " id="clickvalue"> 
 
</div>

<p>

</p>


@section scripts {
    <script>
        //$(document).ready(function () {

        //    //alert("Hello");
        //})
        $(document).ready(function () {
            $('#usertable').hide();
            $('#show').click(function () {
                alert("called show");
                $('#usertable').fadeIn(500);
            });
            
            $('#hide').click(function () {
                
                alert("called hide");
                $('#usertable').fadeOut(500);
                
            });

        });
        $(function (){
            $(".rows").click(function () {
               // alert("you clicked a row");
                var value = $(this).find('.tdNickName').text().trim();
                //alert(value);
                var div = $("#clickvalue").html("<p> The NickName = <strong>" + value + "</strong> </p>");
                //div.text();
                
                div.animate({ fontSize: '40px' }, "slow");
                
                div.animate({ fontSize: '16px' }, "slow");
            });

        })



    </script>
}


